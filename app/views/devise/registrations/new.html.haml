= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-auth' }, defaults: { label: false }) do |f|
  %h2.form-auth-heading= t('auth.sign_up')
  = f.error_notification
  = f.input :email, required: true, autofocus: true
  = f.input :password, required: true
  = f.input :password_confirmation, required: true
  = f.button :submit, t('helpers.auth.sign_up'), class: 'btn btn-large btn-primary btn-block'
  = render "devise/shared/links"
