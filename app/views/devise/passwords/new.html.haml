= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-auth' }) do |f|
  %h2.form-auth-heading= t('auth.forgot_your_password')
  = f.error_notification
  = f.input :email, required: true, autofocus: true, label: false
  = f.button :submit, t('helpers.auth.send_me_reset_password_instructions'), class: 'btn btn-large btn-primary btn-block'
  = render "devise/shared/links"
