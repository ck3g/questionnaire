= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-auth' }, defaults: { label: false }) do |f|
  %h2.form-auth-heading= t('auth.sign_in')
  = f.input :email, required: false, autofocus: true
  = f.input :password, required: false
  = f.input :remember_me, as: :boolean, inline_label: true if devise_mapping.rememberable?
  = f.button :submit, t('helpers.auth.sign_in'), class: 'btn btn-large btn-primary btn-block'
  = render "devise/shared/links"
